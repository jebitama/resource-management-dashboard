{
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build"
    }
  ],
  "rewrites": [
    { 
      "source": "/api/webhooks/(.*)", 
      "destination": "/api/webhooks/$1" 
    },
    { 
      "source": "/api/(.*)", 
      "destination": "/api/index" 
    }
  ]
}
